<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="236dp"
        android:layout_height="match_parent">

        <TextView
            android:text="Adresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/a_n_address"
            android:textStyle="normal|bold"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:text="Longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/a_n_position_long"
            android:textStyle="normal|italic" />

        <TextView
            android:text="Latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/a_n_position_lat"
            android:textStyle="normal|italic" />

        <TextView
            android:text="Nombre d'emplacements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/a_n_bike_stands" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="32dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/a_n_velib"
                android:layout_height="32dp" />

            <TextView
                android:text="disponibles"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:id="@+id/a_n_available_bikes"
                android:textAlignment="textEnd"
                android:height="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/a_n_borne"
                android:layout_height="32dp"
                android:layout_width="32dp" />

            <TextView
                android:text="libres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/a_n_available_bike_stands"
                android:textAlignment="textEnd"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <TextView
            android:text="STATUT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/a_n_status"
            android:textStyle="normal|bold"
            tools:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="5dp" />

    </LinearLayout>
</LinearLayout>